# ====================================
# NEXTAUTH.JS CONFIGURATION
# ====================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ====================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
DATABASE_URL="postgres://username:password@host:port/database_name"

# ====================================
# GOOGLE AUTHENTICATION
# ====================================
# Google OAuth credentials - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ====================================
# APPLE AUTHENTICATION
# ====================================
# Apple authentication credentials
APPLE_CLIENT_ID=com.yourapp.auth  # Your Service ID
APPLE_TEAM_ID=your_team_id       # Your Apple Team ID
APPLE_KEY_ID=your_key_id         # Your Key ID
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----  # Your .p8 key content

# ====================================
# GOOGLE reCAPTCHA v3
# ====================================
# Get credentials from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_V3_SITE_KEY=your_recaptcha_v3_site_key
RECAPTCHA_V3_SECRET_KEY=your_recaptcha_v3_secret_key

# ====================================
# GOOGLE reCAPTCHA v2
# ====================================
# Get credentials from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ====================================
# GEOMAP INTEGRATION
# ====================================
# JWT secret for Geomap integration
GEOMAP_JWT_SECRET=your_geomap_jwt_secret
GEOMAP_APP_URL=http://localhost:3001

# ====================================
# EMAIL CONFIGURATION
# ====================================
# Email service credentials for verification emails
EMAIL_USER=your_email@example.com

# Microsoft OAuth configuration for email authentication
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id
MICROSOFT_REFRESH_TOKEN=your_microsoft_refresh_token
