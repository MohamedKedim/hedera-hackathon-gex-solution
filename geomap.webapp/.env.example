# ====================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://username:password@host:port/database_name

# ====================================
# JWT CONFIGURATION
# ====================================
# Secret key for JWT token signing (use a secure random string)
# Generate with: openssl rand -base64 32
GEOMAP_JWT_SECRET=your_secure_jwt_secret_here

# ====================================
# APPLICATION URLS
# ====================================
# Onboarding application URL
ONBOARDING_APP_URL=http://localhost:3000
NEXT_PUBLIC_ONBOARDING_URL=http://localhost:3000

# Geomap application URL
GEOMAP_URL=http://localhost:3001
NEXT_PUBLIC_GEOMAP_URL=http://localhost:3001

# ====================================
# GOOGLE reCAPTCHA v2
# ====================================
# Get credentials from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ====================================
# EMAIL CONFIGURATION
# ====================================
# Email service credentials for authentication emails
# For Gmail: Enable 2FA and generate an app-specific password
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
