# ====================================
# AUTH0 CONFIGURATION
# ====================================
# Generate a secure random string (32+ chars) for AUTH0_SECRET
# Example: openssl rand -hex 32
AUTH0_SECRET=your_auth0_secret_here

# Your application URL (change port if needed)
AUTH0_BASE_URL=http://localhost:3002

# Auth0 tenant domain (get from Auth0 dashboard)
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com

# Auth0 application credentials (get from Auth0 dashboard)
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# Auth0 API identifier (create in Auth0 dashboard)
AUTH0_AUDIENCE=https://greenearthx/api

# Auth0 callback URLs
NEXT_PUBLIC_AUTH0_REDIRECT_URI=http://localhost:3002/api/auth/callback
NEXT_PUBLIC_AUTH0_POST_LOGOUT_REDIRECT_URI=http://localhost:3002

# ====================================
# AI API KEYS
# ====================================
# Google Gemini API Key (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# ====================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================
PG_CONNECTION=pgsql
DB_HOST=your_database_host
DB_PORT=5432
DB_NAME=mydb
DB_USERNAME=postgres
DB_PASSWORD=your_database_password

# ====================================
# HEDERA CONFIGURATION
# ====================================
# Hedera testnet account ID (format: 0.0.XXXXXXX)
OPERATOR_ACCOUNT_ID=0.0.XXXXXXX

# Hedera ECDSA private key (64 chars hex, starts with 0x)
# IMPORTANT: Keep this secret! Never commit to version control
OPERATOR_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
MY_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Network selection (testnet or mainnet)
HEDERA_NETWORK=testnet

# ====================================
# HEDERA NFT COLLECTIONS
# ====================================
# NFT Token IDs created via Hedera-collection-and-topics scripts
# Format: 0.0.XXXXXXX
NFT_INVOICE_COLLECTION=0.0.XXXXXXX
NFT_PPA_COLLECTION=0.0.XXXXXXX
NFT_POS_COLLECTION=0.0.XXXXXXX
NFT_TERMSHEET_COLLECTION=0.0.XXXXXXX

# ====================================
# HEDERA CONSENSUS SERVICE
# ====================================
# HCS Topic ID for event logging
HCS_TOPIC_ID=0.0.XXXXXXX
NEXT_PUBLIC_HCS_TOPIC_ID=0.0.XXXXXXX

# ====================================
# IPFS / PINATA CONFIGURATION
# ====================================
# Pinata API credentials (get from https://app.pinata.cloud/)
PINATA_API_KEY=your_pinata_api_key
PINATA_API_SECRET=your_pinata_api_secret
